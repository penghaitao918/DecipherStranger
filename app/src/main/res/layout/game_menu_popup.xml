<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/game_setUp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_top"
            android:onClick="GameMenuOnClick"
            android:text="设  置"
            android:textColor="@color/text_blue" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/white_grey" />

        <Button
            android:id="@+id/game_help"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_rectangle_bg"
            android:onClick="GameMenuOnClick"
            android:text="帮  助"
            android:textColor="@color/text_blue" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/white_grey" />

        <Button
            android:id="@+id/game_quit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bottom"
            android:onClick="GameMenuOnClick"
            android:text="退  出"
            android:textColor="@color/text_blue" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/dialog_radius_bg"
            android:onClick="GameMenuOnClick"
            android:text="取  消"
            android:textColor="@color/text_blue" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/blank"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:onClick="GameMenuOnClick"
        android:orientation="vertical" />

</RelativeLayout>