<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/invitationImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/invitation_start_01" />

    <ImageButton
        android:id="@+id/receiveInvitation"
        android:layout_width="65dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/invitation_receive"
        android:onClick="InvitationOnClick" />

    <ImageButton
        android:id="@+id/sendInvitation"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/invitation_send"
        android:onClick="InvitationOnClick" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/receiveInvitation"
        android:layout_alignLeft="@+id/receiveInvitation"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/receiveInvitation"
        android:layout_alignStart="@+id/receiveInvitation"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="获取"
        android:textColor="@color/text_hint"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sendInvitation"
        android:layout_alignLeft="@+id/sendInvitation"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sendInvitation"
        android:layout_alignStart="@+id/sendInvitation"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/text_hint"
        android:textSize="20dp" />

</RelativeLayout>
